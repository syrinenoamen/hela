---
type Props = {
  class?: string;
  heading?: string;
  text: string;
};

const { class: className, text, heading, ...rest } = Astro.props;
---

<div
  class:list={[
    "bg-primary rounded-lg py-6 px-8 mb-6 gap-2 flex flex-col text-text-light",
    className,
  ]}
  {...rest}
>
  {heading && <h3 class="text-lg font-semibold text-text-light">{heading}</h3>}
  <span class="text-4xl font-bold">{text}</span>
</div>
