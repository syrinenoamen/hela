---
import ImageMod from "@/components/ImageMod.astro";
import Base from "@/layouts/Base.astro";
import Card from "@/layouts/partials/Card.astro";
import { getListPage } from "@/lib/contentParser.astro";
import { markdownify } from "@/lib/utils/textConverter";
import Section from "@/partials/Section.astro";
import SmallCard from "@/partials/SmallCard.astro";

const aboutData = await getListPage("about", "-index");
const { title, image, specialization, languages, certifications } =
  aboutData.data;
const aboutContent = aboutData.body ?? "";
---

<Base title={title}>
  <div class="py-20 text-black">
    <Section class:list={[""]}>
      <!-- About Section -->
      <div class="row justify-center">
        <!-- Profile Header -->
        <div class="row items-center mb-12">
          <div class="md:col-4 mb-6 md:mb-0">
            <div class="text-center">
              {
                image && (
                  <ImageMod
                    src={image}
                    height={300}
                    width={300}
                    alt={title}
                    format="webp"
                    class="rounded-full mx-auto shadow-lg"
                  />
                )
              }
            </div>
          </div>
          <div class="md:col-8">
            <SmallCard heading="Spécialisation" text={specialization} />
            <div class="prose lg:prose-lg">
              <p set:html={markdownify(aboutContent)} />
            </div>
          </div>
        </div>
      </div>
    </Section>

    <!-- Languages Section -->
    <Section class="bg-gradient">
      <Card title="Langues parlées">
        <div class="row justify-center">
          {
            languages.map((language) => (
              <div class="sm:col-4 mb-4">
                <div class="bg-theme-light/50 rounded-lg p-6 text-center border">
                  <h4 class="font-semibold text-lg text-dark">
                    {language.name}
                  </h4>
                </div>
              </div>
            ))
          }
        </div>
      </Card>
    </Section>

    <!-- Certifications Section -->
    <Section class="bg-white">
      <Card title="Formation" titleClassName="mb-8">
        <div class="space-y-6">
          {
            certifications.map((cert) => (
              <div class="p-6 rounded-lg border-l-4 border-primary">
                <div class="flex items-center justify-between">
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold mb-2">{cert.name}</h3>
                    <p class="text-text/70">Obtenu en {cert.year}</p>
                  </div>
                  <div class="ml-4">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium text-white">
                      {cert.year}
                    </span>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </Card>
    </Section>
  </div>
</Base>
